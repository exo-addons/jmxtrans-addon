<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <display-name>JMXTrans Add-on</display-name>

  <context-param>
    <param-name>jmxtrans.config</param-name>
    <param-value>
      classpath:jmxtrans.json
      classpath:exo/app-caches.json
      classpath:exo/jcr-caches.json
    </param-value>
  </context-param>
  <!--
      classpath:org/jmxtrans/embedded/config/jmxtrans-internals.json
      classpath:org/jmxtrans/embedded/config/jvm-sun-hotspot.json
      classpath:org/jmxtrans/embedded/config/tomcat-7.json
-->

  <listener>
    <listener-class>org.exoplatform.addons.jmxtrans.JMXTransLoaderListener</listener-class>
  </listener>
</web-app>